<section>
  <%= render NadaWeb.SharedView, "nav.html", assigns %>
  <header class="dialog">
    <h2>We found you! Please confirm your email.</h2>
  </header>
  <div class="actions">
    <form action="<%= Routes.session_path(@conn, :confirm)%>" method="get">
      <input type="email" placeholder="your@email.com" value="<%= assigns[:email] %>" />
      <input type="submit" value="Yup, that's mine", class="button" />
    </form>
  </div>
</section>
