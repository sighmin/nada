<section>
  <h2>Create an account with your email and a selfie.</h2>
  <form action="<%= Routes.registration_path(@conn, :confirm) %>" method="get">
    <input type="email" placeholder="your@email.com"/>
    <input type="file" placeholder="Choose a photo or take a selfie"/>
    <input type="submit" value="Create my account" />
  </form>
</section>
